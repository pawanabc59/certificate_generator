<!DOCTYPE html>
<html lang="en">
<head>
  <title>Add Faculty</title>
  <style type="text/css">

  #btn_submit:hover{
    background-color: #43bc4c;
  }

</style>
</head>
<body>

  <div> <% include navbar.ejs ;%> </div>

  <div class="container" style="margin-top: 20vh;">
    <h2>Faculty Add Form</h2>
    <% if(alert=="true") { %>
        <div class="alert alert-success alert-dismissible">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <strong>Faculty added successfully.</strong>
        </div>
        <% } %>
    <form class="form-horizontal" action="/addFaculty" method="POST">

      <div class="form-group">
        <label class="control-label col-sm-2" for="name">Name of Faculty:</label>
        <div class="col-sm-6">
          <input type="text" class="form-control" id="name" placeholder="Enter Name" name="name">
        </div>
      </div>

      <div class="form-group">
        <label class="control-label col-sm-2" for="username">Username:</label>
        <div class="col-sm-6">
          <input type="text" class="form-control" id="uesrname" placeholder="Enter username" name="username">
        </div>
      </div>

      <div class="form-group">
        <label class="control-label col-sm-2" for="password">Password:</label>
        <div class="col-sm-6">          
          <input type="password" class="form-control" id="password" placeholder="Enter password" name="password">
        </div>
      </div>

      <div class="form-group">
        <label for="department">Select Department:</label>
        <div class="col-sm-4">
          <select class="form-control" id="department" name="department">
            <option value="Mech">Mechanical</option>
            <option value="Comps">Computer Science</option>
            <option value="IT">Information Technology</option>
            <option value="EXTC">EXTC</option>
          </select>
        </div>
      </div>

      <div class="form-group">
        <label for="designation">Select Designation:</label>
        <div class="col-sm-4">
          <select class="form-control" id="role" name="role">
            <option value="hod">Head of Department</option>
            <option value="faculty">Ass. Professor</option>
            <option value="principal">Principal</option>
          </select>
        </div>
      </div>

      <div class="form-group">        
        <div class="col-sm-offset-2 col-sm-6">
          <button id="btn_submit" type="submit" class="btn btn-primary">Submit</button>
        </div>
      </div>

    </form>
  </div>

</body>
</html>
